<h1>Quizzes</h1>

<% unless @quizzes.blank? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th># Questions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.title %></td>
          <td><%= quiz.description %></td>
          <td><%= quiz.number_of_questions %></td>
          <td><%= link_to 'Show', quiz %></td>
          <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
          <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
<% else %>
  <div class="instruction">There are no quizzes. Create one!</div>
<% end %>
<br>

<%= link_to 'New Quiz', new_quiz_path %>
