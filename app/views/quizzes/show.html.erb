<p>
  <strong>Title:</strong>
  <%= @quiz.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @quiz.description %>
</p>

<h3>Questions</h3>
<div>
  <% unless @quiz.questions.blank? %>
    <%= @quiz.questions.each do |q| %>
      <div>
        Question: <%= q.question %>
      </div>
      <div>
        Answer: <%= q.answer %>
      </div>
      <br/>
    <% end %>
  <% else %>
    <div>There are no questions in this quiz. You should add some.</div>
  <% end %>
</div>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>