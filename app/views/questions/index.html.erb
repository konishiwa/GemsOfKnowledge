<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
        <td><%= link_to 'Show', question %> </td>
        <td><%= link_to 'Edit', edit_question_path(question) %> </td>
        <td><%= link_to 'Delete', question, method: :delete, data:
            { confirm: 'Are you sure you would like to delete the question? Deleted questions cannot be recovered.' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path, id: :new_question %>
