<div class="form-profile-div">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
    <a href="javascript:;" onClick="document.getElementById('hideaway1').style.display='block';">?</a>
    <div id="hideaway1" style="display:none;" class="alert">Email must be unique.</div>
    <%= f.password_field :password, :placeholder => 'Password' %>
    <a href="javascript:;" onClick="document.getElementById('hideaway2').style.display='block';">?</a>
    <div id="hideaway2" style="display:none;" class="alert">Your password must be at least 6 characters long.</div>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
    <a href="javascript:;" onClick="document.getElementById('hideaway3').style.display='block';">?</a>
    <div id="hideaway3" style="display:none;" class="alert">The confirmed password must match the password.</div>
    <%= f.submit "Sign up", :class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
